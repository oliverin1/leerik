<!DOCTYPE html>
<html>

<head>
	<%- include ("../partials/letraheader.ejs") %>
	<title><%= data[0].items[0].artistname %> - <%= data[0].items[0].trackname %> Lyrics</title>
	<meta name="description" content="Lyrics for <%= data[0].items[0].trackname %> by <%= data[0].items[0].artistname %>.<%= data[0].items[0].lyrics.split('\n').slice(0, 3).join('\n')+'...' %>">
	<meta name="keywords" content="<%= data[0].items[0].trackname %> lyrics, <%= data[0].items[0].artistname %> <%= data[0].items[0].trackname %> lyrics, <%= data[0].items[0].artistname %> lyrics, lyrics">
	<meta name="robots" content="index, follow">
</head>

<body class="bg-black">
	<%- include ("../partials/letranav.ejs") %>
  <script src="/scripts/script.js" defer></script>

	<div class="gradient"></div>
	<div class="flex justify-center px-10">
		<div class="max-w-4xl flex-grow">
			<div class="flex divider py-6">
				<img src="<%= data[0].items[0].art %>" class="mr-6" width="128" height="128"/>
				<div>
					<h1 class="letratxt mb-2">Lyrics</h1>
					<h1 class="text-4xl mb-2"><%= data[0].items[0].trackname %></h1>
					<div class="flex text-sm mb-4">
						<h2 class="pr-2"><%= data[0].items[0].artistname %></h2>|
						<h2 class="px-2"><%= data[0].items[0].albumname %></h2>|
						<div class="px-2">Dropped <%= data[0].items[0].trackdrop %></div>
					</div>
					<!--<div class="flex items-center">
						<img src="https://img.icons8.com/ios-glyphs/60/e4d4ff/music-record.png" class="w-10 h-10 mr-2"/>
						<button class="flex letradropdown rounded p-2">
							<div class="letratxt">Trackname (<b>1</b> of <b>10</b>)</div>
							<img src="https://img.icons8.com/ios-glyphs/30/8b3dff/expand-arrow--v1.png" class="w-6 h-6 ml-2"/>
						</button>
					</div>-->
				</div>
			</div>
			<div class="letramenu rounded-b-lg">
				<ul>
					<% data[1].items.forEach(function(item) { %>
						<a href="<%=item.trackid%>">
							<li class="trackselection flex pl-5 py-4">
								<div class="letratxt mr-4"><%=item.tracknum%></div>
								<div><%=item.trackname%></div>
							</li>
						</a>
					<% }); %>
				</ul>
				<button class="expand-btn flex p-4 pl-5">
					<div class="letratxt font-bold">More</div>
					<img src="https://img.icons8.com/ios-glyphs/30/e4d4ff/expand-arrow--v1.png" class="w-6 h-6 ml-2"/>
				</button>
				<button class="collapse-btn flex p-4 pl-5">
					<div class="letratxt font-bold">Less</div>
					<img src="https://img.icons8.com/ios-glyphs/30/e4d4ff/collapse-arrow--v1.png" class="w-6 h-6 ml-2"/>					
				</button>
			</div>
			<p class="whitespace-pre-line letratxt text-lg mt-4 mb-6">
				<%= data[0].items[0].lyrics %>
			</p>
			<div class="text-sm mb-6">
				<div>Auto-generated by Whisper.</div>
				<!--<a href="google.com" class="underline letralink">Edit letra</a>-->
			</div>
		</div>
	</div>
</body>

</html>
